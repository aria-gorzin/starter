{
    "swagger": "2.0",
    "info": {
        "description": "Product Information Management API",
        "title": "APP API",
        "termsOfService": "http://example.com/terms/",
        "contact": {
            "name": "Aria Gorzin",
            "url": "http://example.com",
            "email": "aria@example.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "2.0"
    },
    "host": "localhost:7070",
    "basePath": "/",
    "paths": {
        "/upload": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Upload a new image file (jpeg or png), with a size limit of 5MB.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "upload"
                ],
                "summary": "Upload an image",
                "parameters": [
                    {
                        "type": "file",
                        "description": "Image file to upload",
                        "name": "image",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "A name to associate with the image",
                        "name": "name",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "File uploaded successfully",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/util.CustomError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/util.CustomError"
                        }
                    }
                }
            }
        },
        "/upload/{filename}": {
            "get": {
                "description": "Serves an uploaded image by its filename.",
                "produces": [
                    "image/png",
                    "image/jpeg"
                ],
                "tags": [
                    "upload"
                ],
                "summary": "View an uploaded image",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Filename of the image to view",
                        "name": "filename",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The image file",
                        "schema": {
                            "type": "file"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/util.CustomError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "util.CustomError": {
            "type": "object",
            "properties": {
                "error_code": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}